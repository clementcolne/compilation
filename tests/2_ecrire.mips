.text

main:

	#allocation mémoire pour les variables
	move $s7, $sp
	add $sp, $sp, -4

	#allocation mémoire pour les tableaux
	add $sp, $sp, 0
	#ecrire fonc()
	jal fonction1

	move $a0, $v0
	li $v0, 1
	syscall

	#retour à la ligne
	li $v0, 4 
	la $a0, BackSlachN
