fonction1:
	# Sauvegarde $sp dans $s2
	move $s2, $sp
	add, $s2, $s2, 0

	# Allocation mémoire pour les 1 variables locales
	add, $sp, $sp, -4

	add $sp, $sp, 0
	# Sauvegarde de l'adresse de retour
	sw $ra, ($sp)
	add, $sp, $sp, -4

	# b = 4

	# Idf seul à gauche
	li $v0, 4
	sw $v0, 0($s2)

	# retourne b
	lw $v0, 0($s2)
	add, $sp, $sp, 4
	lw $ra, ($sp)
	add $sp, $sp, 4
	jr $ra

	j erreurRetour


