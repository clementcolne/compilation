.text

main:

	#allocation mémoire pour les variables
	move $s7, $sp
	add $sp, $sp, -4

	#allocation mémoire pour les tableaux
	add $sp, $sp, -8
	# toMips constante entière
	li $v0, 7
	sw $v0, -4($s7)

move $sp, -4($s7)		addu $sp, $sp, $v0

	#ecrire b.longueur
	lw $v0, -4($s7)

	move $a0, $v0
	li $v0, 1
	syscall

	#retour à la ligne
	li $v0, 4 
	la $a0, BackSlachN
	syscall


