.data
BackSlachN: .asciiz "\n"
Vrai: .asciiz "vrai"
Faux: .asciiz "faux"
ErreurDivisionZero: .asciiz "Erreur : Division par zéro"
ErreurRetour: .asciiz "Erreur : Pas de retour dans la fonction"
.text

main:

	#allocation mémoire pour les variables
	move $s7, $sp
	add $sp, $sp, -8

	# a = 10
	li $v0, 10
	sw $v0, 0($s7)

	#ecrire fct()
	lw $v0, -4($s7)
	jal fonction1

	move $a0, $v0
	li $v0, 1
	syscall

	#retour à la ligne
	li $v0, 4 
	la $a0, BackSlachN
	syscall


end:
	#Sortie de programme
	li $v0, 10
	syscall
erreurDivisionZero:
	li $v0, 4 
	la $a0, ErreurDivisionZero
	syscall
	#Sortie de programme
	li $v0, 10
	syscall

erreurRetour:
	li $v0, 4 
	la $a0, ErreurRetour
	syscall
	#Sortie de programme
	li $v0, 10
	syscall

fonction1:
	# Sauvegarde $sp dans $s2
	move $s2, $sp

	# Empile les paramètres
	lw $v0, 0($7)
	sw $v0, 0($s2)
	lw $v0, -4($7)
	sw $v0, -4($s2)

	# Sauvegarde de l'adresse de retour
	sw $ra, ($sp)
	add, $sp, $sp, -4

	# Allocation mémoire pour les 2 paramètres locaux
	add, $sp, $sp, -8

	#ecrire b
	lw $v0, 0($s7)
	move $a0, $v0
	li $v0, 1
	syscall

	#retour à la ligne
	li $v0, 4 
	la $a0, BackSlachN
	syscall

	# retourne 0
	li $v0, 0
	add, $sp, $sp, 4
	lw $ra, ($sp)
	jr $ra

	j erreurRetour


